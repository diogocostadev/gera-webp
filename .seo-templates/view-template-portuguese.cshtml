/* Adicione estilos específicos aqui se necessário */
[ESTILOS_ESPECIFICOS]
</style>

@section Scripts {
    <script src="~/js/site.js"></script>
    <!-- Scripts específicos da funcionalidade -->
    [SCRIPTS_ESPECIFICOS]
