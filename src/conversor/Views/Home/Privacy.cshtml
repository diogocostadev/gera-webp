@{
    ViewBag.Title = "Privacy Policy - WebP Converter";
    Layout = null; // Não usar layout, página auto-contida
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Privacy policy of WebP Converter. Learn how we handle your data and ensure the security of your images." />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://unpkg.com/feather-icons"></script>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="header-content">
            <a href="/en" class="logo">
                <div class="logo-icon">W</div>
                WebP Converter
            </a>
            <nav>
                <a href="/en" style="color: var(--text-secondary); text-decoration: none; margin-left: 1rem;">Home</a>
                <a href="/en/privacy" style="color: var(--primary-color); text-decoration: none; margin-left: 1rem; font-weight: 600;">Privacy</a>
            </nav>
        </div>
    </header>

    <!-- Main Container -->
    <div class="main-container fade-in-up">
        
        <!-- Left Ad Space -->
        <aside class="ad-space" style="display: none;">
            <div class="ad-placeholder">
                <div style="text-align: center;">
                    <i data-feather="dollar-sign" style="width: 2rem; height: 2rem; margin-bottom: 0.5rem;"></i>
                    <p><strong>Ad Space</strong></p>
                    <p>Google AdSense<br/>300x250 or 300x600</p>
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="converter-card">
            <div class="card-header">
                <h1><i data-feather="shield" style="width: 2.5rem; height: 2.5rem; margin-right: 0.5rem; vertical-align: middle;"></i>Privacy Policy</h1>
                <p>Transparency and security in handling your data</p>
            </div>

            <div class="card-body" style="text-align: left;">
                <div style="color: var(--text-primary); line-height: 1.8;">
                    
                    <section style="margin-bottom: 2rem;">
                        <h2 style="color: var(--primary-color); margin-bottom: 1rem; display: flex; align-items: center;">
                            <i data-feather="info" style="width: 1.5rem; height: 1.5rem; margin-right: 0.5rem;"></i>
                            Executive Summary
                        </h2>
                        <div style="background: var(--secondary-color); padding: 1.5rem; border-radius: var(--radius-lg); border-left: 4px solid var(--primary-color);">
                            <p><strong>Your files are safe:</strong> All images are processed locally on our servers and automatically removed after 30 minutes.</p>
                            <p><strong>We don't collect personal data:</strong> We don't require registration, email, or personal information.</p>
                            <p><strong>Cookie usage:</strong> We only use essential cookies for site functionality and Google Analytics.</p>
                        </div>
                    </section>

                    <section style="margin-bottom: 2rem;">
                        <h2 style="color: var(--primary-color); margin-bottom: 1rem; display: flex; align-items: center;">
                            <i data-feather="upload" style="width: 1.5rem; height: 1.5rem; margin-right: 0.5rem;"></i>
                            How We Handle Your Images
                        </h2>
                        <ul style="margin-left: 1rem;">
                            <li><strong>Local Processing:</strong> All images are processed on our secure servers.</li>
                            <li><strong>Automatic Removal:</strong> All files (originals and converted) are automatically removed after 5 minutes.</li>
                            <li><strong>Frequent Cleanup:</strong> Automatic cleanup system runs every 2 minutes to maintain optimized storage.</li>
                            <li><strong>No Backup:</strong> We don't keep copies or backups of your images.</li>
                            <li><strong>No Viewing:</strong> Our administrators don't access or view your images.</li>
                            <li><strong>Free System:</strong> Automatic cleanup ensures continuous service availability.</li>
                        </ul>
                    </section>

                    <section style="margin-bottom: 2rem;">
                        <h2 style="color: var(--primary-color); margin-bottom: 1rem; display: flex; align-items: center;">
                            <i data-feather="cookie" style="width: 1.5rem; height: 1.5rem; margin-right: 0.5rem;"></i>
                            Cookies and Technologies
                        </h2>
                        <div style="background: rgba(99, 102, 241, 0.05); padding: 1.5rem; border-radius: var(--radius-lg);">
                            <h3 style="margin-bottom: 0.5rem;">Essential Cookies</h3>
                            <p>Used to maintain the session during conversion and ensure security.</p>
                            
                            <h3 style="margin: 1rem 0 0.5rem 0;">Google Analytics</h3>
                            <p>We collect anonymous usage data to improve our service:</p>
                            <ul style="margin-left: 1rem;">
                                <li>Pages visited</li>
                                <li>Time spent</li>
                                <li>Device type and browser</li>
                                <li>Country of origin (without personal identification)</li>
                            </ul>
                            
                            <h3 style="margin: 1rem 0 0.5rem 0;">Google AdSense</h3>
                            <p>We use contextual ads from Google to keep the service free. Google may use cookies for ad personalization.</p>
                        </div>
                    </section>

                    <section style="margin-bottom: 2rem;">
                        <h2 style="color: var(--primary-color); margin-bottom: 1rem; display: flex; align-items: center;">
                            <i data-feather="database" style="width: 1.5rem; height: 1.5rem; margin-right: 0.5rem;"></i>
                            Data We DON'T Collect
                        </h2>
                        <div style="background: rgba(16, 185, 129, 0.1); padding: 1.5rem; border-radius: var(--radius-lg); border-left: 4px solid var(--success-color);">
                            <ul style="margin-left: 1rem;">
                                <li>✅ Name, email, or contact information</li>
                                <li>✅ Identifiable IP address</li>
                                <li>✅ Precise location</li>
                                <li>✅ Banking or financial information</li>
                                <li>✅ Biometric data from images</li>
                                <li>✅ EXIF metadata from photos</li>
                            </ul>
                        </div>
                    </section>

                    <section style="margin-bottom: 2rem;">
                        <h2 style="color: var(--primary-color); margin-bottom: 1rem; display: flex; align-items: center;">
                            <i data-feather="lock" style="width: 1.5rem; height: 1.5rem; margin-right: 0.5rem;"></i>
                            Security and Protection
                        </h2>
                        <ul style="margin-left: 1rem;">
                            <li><strong>HTTPS:</strong> All communication is encrypted with SSL/TLS.</li>
                            <li><strong>Secure Servers:</strong> Infrastructure protected against unauthorized access.</li>
                            <li><strong>No Logs:</strong> We don't keep detailed activity records.</li>
                            <li><strong>Automatic Cleanup:</strong> Automated file removal system.</li>
                        </ul>
                    </section>

                    <section style="margin-bottom: 2rem;">
                        <h2 style="color: var(--primary-color); margin-bottom: 1rem; display: flex; align-items: center;">
                            <i data-feather="users" style="width: 1.5rem; height: 1.5rem; margin-right: 0.5rem;"></i>
                            Your Rights
                        </h2>
                        <p>Since we don't collect identifiable personal data, you have the right to:</p>
                        <ul style="margin-left: 1rem;">
                            <li>Use the service without creating an account</li>
                            <li>Have your images automatically removed</li>
                            <li>Disable non-essential cookies in your browser</li>
                            <li>Request clarifications about our policy</li>
                        </ul>
                    </section>

                    <section style="margin-bottom: 2rem;">
                        <h2 style="color: var(--primary-color); margin-bottom: 1rem; display: flex; align-items: center;">
                            <i data-feather="refresh-cw" style="width: 1.5rem; height: 1.5rem; margin-right: 0.5rem;"></i>
                            Updates
                        </h2>
                        <p>This policy may be updated occasionally. Significant changes will be notified on the site's homepage.</p>
                        <p><strong>Last updated:</strong> December 2024</p>
                    </section>

                    <section style="background: var(--secondary-color); padding: 1.5rem; border-radius: var(--radius-lg); text-align: center;">
                        <h3 style="color: var(--primary-color); margin-bottom: 1rem;">Privacy Questions?</h3>
                        <p>If you have any questions about how we handle your data, our policy is always available on this page.</p>
                        <a href="/en" style="display: inline-flex; align-items: center; color: var(--primary-color); text-decoration: none; font-weight: 600; margin-top: 1rem;">
                            <i data-feather="arrow-left" style="width: 1rem; height: 1rem; margin-right: 0.5rem;"></i>
                            Back to Converter
                        </a>
                    </section>
                </div>
            </div>
        </main>

        <!-- Right Ad Space -->
        <aside class="ad-space" style="display: none;">
            <div class="ad-placeholder">
                <div style="text-align: center;">
                    <i data-feather="dollar-sign" style="width: 2rem; height: 2rem; margin-bottom: 0.5rem;"></i>
                    <p><strong>Ad Space</strong></p>
                    <p>Google AdSense<br/>300x250 or 300x600</p>
                </div>
            </div>
        </aside>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <p>&copy; 2024 WebP Converter. Secure and private image processing.</p>
            <p style="font-size: 0.875rem; margin-top: 0.5rem; opacity: 0.8;">
                <a href="/en/privacy" style="color: rgba(255,255,255,0.8); text-decoration: none;">Privacy Policy</a> • 
                Files automatically removed • 100% secure
            </p>
        </div>
    </footer>

    <script>
        // Initialize Feather icons
        feather.replace();

        // Show ad areas on desktop
        if (window.innerWidth >= 1024) {
            document.querySelectorAll('.ad-space').forEach(el => {
                if (el.style.display === 'none') {
                    el.style.display = 'block';
                }
            });
        }
    </script>
</body>
</html> 