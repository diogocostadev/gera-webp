@section Scripts {{
    <script>
        feather.replace();
        
        function atualizarValorDaQuantidade(value) {{
            document.getElementById('qualidadeValue').textContent = value;
            updateCompressionEstimate(value);
            updateActivePreset(value);
        }}
        
        function updateCompressionEstimate(value) {{
            const compressionEstimate = document.getElementById('compressionEstimate');
            if (compressionEstimate) {{
                let estimate;
                if (value <= 30) estimate = '~70% menor';
                else if (value <= 50) estimate = '~60% menor';
                else if (value <= 70) estimate = '~50% menor';
                else if (value <= 85) estimate = '~35% menor';
                else estimate = '~20% menor';
                
                compressionEstimate.textContent = estimate;
            }}
        }}
        
        function setCompressionPreset(value) {{
            document.getElementById('qualidade').value = value;
            atualizarValorDaQuantidade(value);
        }}
        
        function updateActivePreset(value) {{
            document.querySelectorAll('.preset-btn').forEach(btn => btn.classList.remove('active'));
            
            if (value >= 85) {{
                document.querySelector('[data-preset="90"]').classList.add('active');
            }} else if (value >= 60) {{
                document.querySelector('[data-preset="75"]').classList.add('active');
            }} else {{
                document.querySelector('[data-preset="50"]').classList.add('active');
            }}
        }}

        // Preset buttons event delegation
        document.addEventListener('click', function(e) {{
            if (e.target.closest('[data-preset]')) {{
                const preset = e.target.closest('[data-preset]').dataset.preset;
                if (preset) {{
                    setCompressionPreset(parseInt(preset));
                }}
            }}
        }});

        // File upload handling
        const fileInput = document.getElementById('arquivos');
        const selectedFiles = document.getElementById('selectedFiles');
        const fileCount = document.getElementById('fileCount');
        const uploadArea = document.getElementById('uploadArea');

        fileInput.addEventListener('change', function(event) {{
            const files = event.target.files;
            updateFileDisplay(files);
        }});

        uploadArea.addEventListener('click', function(e) {{
            if (e.target === fileInput) return;
            fileInput.click();
        }});

        function updateFileDisplay(files) {{
            if (files.length > 0) {{
                let totalSize = 0;
                for (let i = 0; i < files.length; i++) {{
                    totalSize += files[i].size;
                }}
                const totalMB = (totalSize / (1024 * 1024)).toFixed(1);
                
                fileCount.textContent = `${files.length} imagem(s) ‚Ä¢ ${totalMB}MB total`;
                selectedFiles.style.display = 'block';
                uploadArea.classList.add('has-files');
            }} else {{
                selectedFiles.style.display = 'none';
                uploadArea.classList.remove('has-files');
            }}
        }}
