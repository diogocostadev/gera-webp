@section Scripts {
    <script>
        feather.replace();
        
        function atualizarValorDaQuantidade(value) {
            document.getElementById('qualidadeValue').textContent = value;
            updateActivePreset(value);
        }
        
        function updateActivePreset(value) {
            const presetButtons = document.querySelectorAll('.preset-btn');
            presetButtons.forEach(btn => btn.classList.remove('active'));
            
            if (value <= 65) presetButtons[2]?.classList.add('active');
            else if (value >= 90) presetButtons[0]?.classList.add('active');
            else presetButtons[1]?.classList.add('active');
        }

        // File upload handling
        const fileInput = document.getElementById('arquivos');
        const uploadArea = document.getElementById('uploadArea');
        const selectedFiles = document.getElementById('selectedFiles');
        const fileCount = document.getElementById('fileCount');

        fileInput.addEventListener('change', function(e) {
            updateFileDisplay(e.target.files);
        });

        uploadArea.addEventListener('click', () => fileInput.click());

        // Drag and drop
        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.classList.add('drag-over');
        });

        uploadArea.addEventListener('dragleave', () => {
            uploadArea.classList.remove('drag-over');
        });

        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.classList.remove('drag-over');
            const files = Array.from(e.dataTransfer.files).filter(file => 
                ['image/png', 'image/gif', 'image/webp'].includes(file.type)
            );
            if (files.length > 0) {
                const dt = new DataTransfer();
                files.forEach(file => dt.items.add(file));
                fileInput.files = dt.files;
                updateFileDisplay(files);
            }
        });

        // Preset buttons
        document.querySelectorAll('.preset-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const preset = this.dataset.preset;
                document.getElementById('qualidade').value = preset;
                atualizarValorDaQuantidade(preset);
            });
        });

        function updateFileDisplay(files) {
            if (files.length > 0) {
                let totalSize = 0;
                for (let i = 0; i < files.length; i++) {
                    totalSize += files[i].size;
                }
                const totalMB = (totalSize / (1024 * 1024)).toFixed(1);
                
                fileCount.textContent = `${files.length} imagem(s) ‚Ä¢ ${totalMB}MB total`;
                selectedFiles.style.display = 'block';
                uploadArea.classList.add('has-files');
            } else {
                selectedFiles.style.display = 'none';
                uploadArea.classList.remove('has-files');
            }
        }

        // Form submission with progress
        document.getElementById('converterForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const progressContainer = document.getElementById('progressContainer');
            const convertButton = document.getElementById('convertButton');
            
            progressContainer.style.display = 'block';
            convertButton.disabled = true;
            convertButton.innerHTML = '<i data-feather="loader"></i> Convertendo...';
            feather.replace();
            
            // Enviar o formul√°rio usando fetch mas tratar como HTML response
            fetch('/converter-para-jpeg', {
                method: 'POST',
                body: formData
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.text(); // Obter como texto (HTML)
            })
            .then(html => {
                // Parse do HTML para extrair o link de download
                const parser = new DOMParser();
                const doc = parser.parseFromString(html, 'text/html');
                const downloadLink = doc.querySelector('a[download]');
                
                if (downloadLink) {
                    // Se encontrou link de download, redirecionar
                    window.location.href = downloadLink.href;
                } else {
                    // Se n√£o encontrou, substituir a p√°gina atual
                    document.open();
                    document.write(html);
                    document.close();
                }
            })
            .catch(error => {
                console.error('Erro:', error);
                alert('Erro na convers√£o. Tente novamente.');
            })
            .finally(() => {
                progressContainer.style.display = 'none';
                convertButton.disabled = false;
                convertButton.innerHTML = '<i data-feather="image"></i> Converter para JPEG Agora';
                feather.replace();
            });
        });
    </script>
    <script src="~/js/site.js"></script>
}
