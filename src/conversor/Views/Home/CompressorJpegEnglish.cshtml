@{
    ViewData["Title"] = "Compress JPEG Online - Reduce JPG Image Size";
    ViewData["Description"] = "Free JPEG compressor online. Reduce JPEG file size while maintaining excellent quality. Batch compression up to 100MB. No watermarks, fast processing.";
    ViewData["Keywords"] = "compress jpeg, optimize jpeg, reduce jpeg size, jpeg compressor, jpg optimizer, image compression";
}

<div class="hero-section">
    <div class="container">
        <div class="hero-content">
            <h1>Online JPEG Compressor</h1>
            <div class="hero-subtitle">
                <p>Reduce JPEG file size while maintaining excellent quality. Fast, free, and secure compression.</p>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <!-- Hero Banner -->
    <div class="feature-banner">
        <div class="feature-content">
            <div class="feature-icon">
                <i class="fas fa-file-image"></i>
            </div>
            <div class="feature-text">
                <span><strong>JPEG Compressor</strong> • Smart Optimization • Quality Preserved</span>
            </div>
        </div>
    </div>

    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/en/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Compress JPEG</li>
        </ol>
    </nav>

    <!-- Upload Area -->
    <div class="upload-section">
        <div class="upload-container" id="uploadArea">
            <div class="upload-icon">
                <i class="fas fa-cloud-upload-alt"></i>
            </div>
            <div class="upload-text">
                <h3>Select or drag JPEG images</h3>
                <p>Supports JPG and JPEG formats • Up to 100MB total</p>
            </div>
            <div class="upload-input-container">
                <input type="file" id="arquivos" name="arquivos" multiple accept="image/jpeg,image/jpg" 
                       class="upload-input" aria-label="Select JPEG images to compress">
                <label for="arquivos" class="upload-button">
                    <i class="fas fa-plus"></i> Select Images
                </label>
            </div>
        </div>

        <!-- File List -->
        <div id="fileList" class="file-list mt-3" style="display: none;">
            <h4>Selected Files:</h4>
            <div id="fileListContent"></div>
        </div>
    </div>

    <!-- Quality Settings -->
    <div class="quality-section">
        <div class="quality-controls">
            <div class="quality-header">
                <h2>Configure JPEG Compression</h2>
                <p>Choose the compression level that best fits your needs</p>
            </div>

            <div class="quality-slider-container">
                <label for="qualidade" class="quality-label">
                    <span>Quality: <span id="qualityValue">75</span>%</span>
                    <small id="qualityDescription">Balanced (recommended)</small>
                </label>
                <input type="range" id="qualidade" name="qualidade" min="10" max="100" value="75" 
                       class="quality-slider" aria-label="Compression quality">
                <div class="quality-marks">
                    <span>Smaller file</span>
                    <span>Better quality</span>
                </div>
            </div>

            <!-- Quality Presets -->
            <div class="preset-buttons">
                <button type="button" class="preset-btn" data-quality="90" aria-label="Maximum quality preset">
                    <i class="fas fa-gem"></i>
                    <span>Maximum</span>
                    <small>90% quality</small>
                </button>
                <button type="button" class="preset-btn active" data-quality="75" aria-label="Balanced quality preset">
                    <i class="fas fa-balance-scale"></i>
                    <span>Balanced</span>
                    <small>75% quality</small>
                </button>
                <button type="button" class="preset-btn" data-quality="60" aria-label="Web optimized preset">
                    <i class="fas fa-globe"></i>
                    <span>Web</span>
                    <small>60% quality</small>
                </button>
                <button type="button" class="preset-btn" data-quality="40" aria-label="Email optimized preset">
                    <i class="fas fa-envelope"></i>
                    <span>Email</span>
                    <small>40% quality</small>
                </button>
            </div>
        </div>
    </div>

    <!-- Convert Section -->
    <div class="convert-section">
        <form id="converterForm" method="post" action="/en/compress-jpeg" enctype="multipart/form-data">
            <h2>Compress JPEG Images</h2>
            <div class="convert-content">
                <button type="submit" class="convert-button" id="convertButton" aria-label="Compress JPEG images">
                    <i class="fas fa-compress-alt"></i>
                    Compress JPEG Now
                </button>
            </div>
            <small>JPEG compression with adjustable quality</small>
        </form>

        <!-- Progress -->
        <div id="progressSection" class="progress-section" style="display: none;">
            <div class="progress-content">
                <div class="progress-icon">
                    <i class="fas fa-cog fa-spin"></i>
                </div>
                <div class="progress-text">
                    <h3>Compressing your JPEG images...</h3>
                    <p>Please wait while we optimize your files</p>
                </div>
                <div class="progress-bar-container">
                    <div class="progress-bar" id="progressBar"></div>
                </div>
                <div class="progress-percentage" id="progressPercentage">0%</div>
            </div>
        </div>

        <!-- Results -->
        <div id="resultSection" class="result-section" style="display: none;">
            <div class="result-content">
                <div class="result-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="result-text">
                    <h3>Compression Complete!</h3>
                    <p id="resultSummary">Your JPEG images have been compressed successfully</p>
                </div>
                <div class="result-actions">
                    <a href="#" id="downloadLink" class="download-button">
                        <i class="fas fa-download"></i> Download Compressed Images
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Benefits Section -->
    <div class="benefits-section">
        <h2 id="benefits-title" class="section-title">Why Compress JPEG Images?</h2>
        <div class="compression-benefits benefits-grid">
            <div class="benefit-item">
                <div class="benefit-icon"><i class="fas fa-tachometer-alt"></i></div>
                <h3>Faster Loading</h3>
                <p>Reduce file size by up to 80% for faster website and app loading times.</p>
            </div>
            <div class="benefit-item">
                <div class="benefit-icon"><i class="fas fa-mobile-alt"></i></div>
                <h3>Mobile Friendly</h3>
                <p>Smaller files consume less mobile data and load faster on slow connections.</p>
            </div>
            <div class="benefit-item">
                <div class="benefit-icon"><i class="fas fa-eye"></i></div>
                <h3>Quality Preserved</h3>
                <p>Our smart compression maintains visual quality while significantly reducing file size.</p>
            </div>
            <div class="benefit-item">
                <div class="benefit-icon"><i class="fas fa-layer-group"></i></div>
                <h3>Batch Processing</h3>
                <p>Compress multiple JPEG files simultaneously. Upload up to 100MB total.</p>
            </div>
        </div>
    </div>

    <!-- How To Section -->
    <div class="howto-section">
        <h2 id="howto-title" class="section-title">How to Compress JPEG Online</h2>
        <div class="steps-container">
            <div class="step-item">
                <div class="step-number">1</div>
                <div class="step-content">
                    <h3>Select Images</h3>
                    <p>Click "Select Images" or drag JPEG files to the upload area.</p>
                </div>
            </div>
            <div class="step-item">
                <div class="step-number">2</div>
                <div class="step-content">
                    <h3>Choose Quality</h3>
                    <p>Adjust compression quality or use our optimized presets.</p>
                </div>
            </div>
            <div class="step-item">
                <div class="step-number">3</div>
                <div class="step-content">
                    <h3>Compress</h3>
                    <p>Click "Compress JPEG Now" and wait for processing to complete.</p>
                </div>
            </div>
            <div class="step-item">
                <div class="step-number">4</div>
                <div class="step-content">
                    <h3>Download</h3>
                    <p>Download your compressed JPEG images individually or as a ZIP file.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- FAQ Section -->
    <div class="faq-section">
        <h2 id="faq-title" class="section-title">Frequently Asked Questions about JPEG Compression</h2>
        <div class="faq-container">
            <details class="faq-item">
                <summary>Does JPEG compression lose quality?</summary>
                <div class="faq-content">
                    <p>With our smart compression, you can reduce JPEG files by up to 80% while maintaining excellent visual quality and preserving important details.</p>
                </div>
            </details>
            <details class="faq-item">
                <summary>What's the maximum file size I can upload?</summary>
                <div class="faq-content">
                    <p>You can upload up to 100MB total. This allows you to compress dozens of JPEG images simultaneously for maximum efficiency.</p>
                </div>
            </details>
            <details class="faq-item">
                <summary>Are my images safe and private?</summary>
                <div class="faq-content">
                    <p>Yes! All compression happens on our secure servers and files are automatically deleted after processing. We never store or share your images.</p>
                </div>
            </details>
            <details class="faq-item">
                <summary>Can I compress many JPEG images at once?</summary>
                <div class="faq-content">
                    <p>Yes! Our compressor supports batch upload up to 100MB total. Compress dozens of JPEGs simultaneously.</p>
                </div>
            </details>
            <details class="faq-item">
                <summary>What quality level should I choose?</summary>
                <div class="faq-content">
                    <p>For web use, 60-75% quality is ideal. For print, use 80-90%. Our "Balanced" preset (75%) works great for most cases.</p>
                </div>
            </details>
        </div>
    </div>

    <!-- CTA Section -->
    <div class="cta-section">
        <div class="cta-content">
            <h2>Ready to Compress Your JPEG Images?</h2>
            <p>Start now and reduce your image file sizes while maintaining excellent quality</p>
            <a href="#uploadArea" class="cta-button" aria-label="Start JPEG compression">
                <i class="fas fa-rocket"></i>
                Start JPEG Compression
            </a>
        </div>
    </div>
</div>

<style>
/* Specific styles for CompressorJpeg page */
.compression-benefits .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
}

.compression-benefits .benefit-item {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 15px;
    padding: 2rem;
    text-align: center;
    transition: all 0.3s ease;
    min-height: 280px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.compression-benefits .benefit-item:hover {
    transform: translateY(-5px);
    border-color: var(--primary-color);
    box-shadow: 0 10px 30px rgba(0, 123, 255, 0.1);
}

.compression-benefits .benefit-icon {
    font-size: 3rem;
    color: var(--primary-color);
    margin-bottom: 1.5rem;
}

.compression-benefits .benefit-item h3 {
    color: var(--text-color);
    margin-bottom: 1rem;
    font-size: 1.25rem;
    font-weight: 600;
}

.compression-benefits .benefit-item p {
    color: var(--text-muted);
    line-height: 1.6;
    margin: 0;
}

/* How-to section styles */
.howto-section .steps-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
}

.howto-section .step-item {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 15px;
    padding: 2rem;
    text-align: center;
    transition: all 0.3s ease;
    min-height: 250px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
}

.howto-section .step-item:hover {
    transform: translateY(-3px);
    border-color: var(--primary-color);
}

.howto-section .step-number {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 1.5rem;
}

.howto-section .step-content h3 {
    color: var(--text-color);
    margin-bottom: 1rem;
    font-size: 1.2rem;
}

.howto-section .step-content p {
    color: var(--text-muted);
    line-height: 1.6;
    margin: 0;
}

/* Preset buttons grid */
.preset-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 1.5rem;
}

.preset-btn {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 1rem;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
    color: var(--text-color);
    min-width: 120px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
}

.preset-btn:hover,
.preset-btn.active {
    background: var(--primary-color);
    border-color: var(--primary-color);
    transform: translateY(-2px);
}

.preset-btn i {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
}

.preset-btn span {
    font-weight: 600;
    font-size: 1rem;
}

.preset-btn small {
    opacity: 0.8;
    font-size: 0.85rem;
}

/* Responsive adjustments */
@@media (max-width: 1024px) {
    .compression-benefits .benefits-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }
    
    .howto-section .steps-container {
        grid-template-columns: repeat(2, 1fr);
    }
    
    .preset-buttons {
        gap: 0.75rem;
    }
    
    .preset-btn {
        min-width: 100px;
        padding: 0.75rem;
    }
}

@@media (max-width: 768px) {
    .compression-benefits .benefits-grid {
        grid-template-columns: 1fr;
    }
    
    .howto-section .steps-container {
        grid-template-columns: 1fr;
    }
    
    .preset-buttons {
        flex-direction: column;
        align-items: center;
    }
    
    .preset-btn {
        width: 100%;
        max-width: 280px;
    }
}

@@media (max-width: 480px) {
    .compression-benefits .benefit-item {
        min-height: 220px;
        padding: 1.5rem;
    }
    
    .howto-section .step-item {
        min-height: 200px;
        padding: 1.5rem;
    }
    
    .howto-section .step-number {
        width: 50px;
        height: 50px;
        font-size: 1.25rem;
    }
}
</style>

<!-- Other Tools -->
@await Html.PartialAsync("_ToolsGrid")

@section Scripts {
    <script src="~/js/site.js"></script>
} 