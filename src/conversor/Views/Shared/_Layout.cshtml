        @@media (max-width: 768px) {
            article h1, aside h1, nav h1, section h1 {
                font-size: 2rem !important;
            }
        }
        
        @@media (max-width: 480px) {
            article h1, aside h1, nav h1, section h1 {
                font-size: 1.75rem !important;
            }
        }
    </style>
    
