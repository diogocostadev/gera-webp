<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Gerar WebP</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                       
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - Gerar WebP - <a asp-area="" asp-controller="Home" asp-action="Privacidade"></a>
    </div>
</footer>

<script>
    document.getElementById('arquivos').addEventListener('change', function(event) {
        var validTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif'];
        for (var i = 0; i < this.files.length; i++) {
            if (!validTypes.includes(this.files[i].type)) {
                alert('Somente são permitidos arquivos de imagem.');
                this.value = ''; 
                break;
            }
        }
    });
</script>

<script>
    function atualizarValorDaQuantidade(value) {
        document.getElementById('qualidadeValue').textContent = value;
    }
</script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.11/signalr.min.js"></script>

    <script type="text/javascript">
        var connection = new signalR.HubConnectionBuilder().withUrl("/progressHub").build();
        connection.on("ReceiveProgress", function (progress) {
            var progressBar = document.getElementById("progress-bar");
            if (progressBar) {
                progressBar.style.width = progress + "%";
                progressBar.setAttribute("aria-valuenow", progress);
                document.getElementById("progressContainer").style.display = 'block';
            }
        });

        connection.start().catch(function (err) {
            return console.error(err.toString());
        });
    </script>



    <script src="~/lib/signalr/dist/browser/signalr.js"></script>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
